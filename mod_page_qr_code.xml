<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="4" client="site" method="upgrade">
	<name>MOD_PAGE_QR_CODE</name>
	<author>Niko Winckel</author>
	<creationDate>29.05.2023</creationDate>
	<license>GNU/GPL</license>
	<authorEmail>joomla@nik-o-mat.de</authorEmail>
	<authorUrl>www.nik-o-mat.de</authorUrl>
	<version>2.0.0</version>
	<description>MOD_PAGE_QR_CODE_DESC</description>
	<namespace path="src">Nikomate\Module\PageQrCode</namespace>
	<languages>
		<language tag="de-DE">language/de-DE/mod_page_qr_code.ini</language>
		<language tag="de-DE">language/de-DE/mod_page_qr_code.sys.ini</language>
		<language tag="en-GB">language/en-GB/mod_page_qr_code.ini</language>
		<language tag="en-GB">language/en-GB/mod_page_qr_code.sys.ini</language>
	</languages>
	<files>
		<folder module="mod_page_qr_code">services</folder>
		<folder>src</folder>
		<folder>tmpl</folder>
		<filename>script.php</filename>
	</files>
	<scriptfile>script.php</scriptfile>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="groesse"
				       type="text"
				       default="120"
				       label="QR_SIZE"
				       description="QR_SIZE_DESCRIPTION"
				       required="true"
				/>
				<field name="ausrichten"
				       type="list"
				       default="center"
				       label="QR_ORIENTATION"
				       description="QR_ORIENTATION_DESCRIPTION"
				>
					<option value="left">QR_ORIENT_LEFT</option>
					<option value="center">QR_ORIENT_MID</option>
					<option value="right">QR_ORIENT_RIGHT</option>
				</field>
				<field name="farbe"
				       type="color"
				       default="000000"
				       label="QR_PIXELCOLOR"
				       description="QR_PIXELCOLOR_DESCRIPTION"
				       preview="true"
				>
				</field>
				<field name="bgfarbe"
				       type="color"
				       default="ffffff"
				       label="QR_BACKGROUND_COLOR"
				       description="QR_BACKGROUND_COLOR_DESCRIPTION"
				       preview="true"
				>
				</field>
				<field name="margin"
				       type="number"
				       default="4"
				       label="QR_BORDER"
				       description="QR_BORDER_DESCRIPTION"
				       min="0"
				       max="100"
				       validate="number"
				>
				</field>
				<field name="link"
				       type="list"
				       default="1"
				       label="QR_LINK_AUTHOR"
				       description="QR_LINK_AUTHOR_DESCRIPTION"
				>
					<option value="1">QR_YES</option>
					<option value="0">QR_NO</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
